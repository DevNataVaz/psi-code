---
import { Image } from 'astro:assets';
---

<div class="container">
    <header>
        <nav>
            <div class="logo">Psi Jess</div>
            <div class="nav-links">
                <a href="/login">Área do Paciente</a>
                <a href="/auth" class="highlight">Comece aqui!</a>
            </div>
        </nav>
    </header>

    <main>
        <section class="hero">
            <div class="hero-content">
                <Image 
                    src="/src/assets/loginsvg.svg" 
                    alt="Imagem de login" 
                    width={400} 
                    height={300}
                    class="hero-image"
                />
                <h1>Bem-vindo ao seu espaço de cuidado</h1>
                <p>Um ambiente seguro e acolhedor</p>
                <a href="/auth" class="cta-button">Comece aqui!</a>
            </div>
        </section>
    </main>
</div>

<style>
    :root {
       
        --primary-color: #7C96AB;
        --opacity-color-button: #597c99;
        --secondary-color: #BFCCB5;
        --accent-color: #EDC6B1;
        --background-color: #F7F7F7;
        --text-color: #2C3333;
        --shadow-color: rgba(0, 0, 0, 0.1);
    }

    .container {
        min-height: 100vh;
        max-width: 100%;
        background-color: var(--background-color);
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    header {
        padding: 1.5rem 2rem;
        background: white;
        box-shadow: 0 2px 10px var(--shadow-color);
    }

    nav {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: 1.8rem;
        font-weight: 600;
        color: var(--primary-color);
    }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-links a {
        text-decoration: none;
        color: var(--text-color);
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: var(--primary-color);
    }

    .nav-links a.highlight {
        padding: 0.5rem 1.5rem;
        background-color: var(--primary-color);
        color: white;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .nav-links a.highlight:hover {
        background-color: var(--opacity-color-button);
        transform: translateY(-2px);
    }

    .hero {
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
        background: linear-gradient(
            135deg,
            rgba(124, 150, 171, 0.1),
            rgba(191, 204, 181, 0.1)
        );
    }

    .hero-content {
        max-width: 800px;
    }

    h1 {
        font-size: 3rem;
        color: var(--text-color);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    p {
        font-size: 1.2rem;
        color: var(--text-color);
        opacity: 0.8;
        margin-bottom: 2rem;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        background-color: var(--primary-color);
        color: var(--text-color);
        text-decoration: none;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px var(--shadow-color);
    }

    .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px var(--shadow-color);
        background-color: var(--opacity-color-button);
    
    }

    @media (max-width: 768px) {
        .nav-links {
            gap: 1rem;
        }

        h1 {
            font-size: 2rem;
        }

        p {
            font-size: 1rem;
        }
    }

    .hero-image {
    max-width: 100%;
    height: auto;
    margin-bottom: 2rem;
}

@media (max-width: 768px) {
    .hero-image {
        width: 300px;
    }
}
</style>

